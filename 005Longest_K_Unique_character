#include <iostream>
#include<cstring>
using namespace std;

// Sliding Window Problem

// Longest k Unique character
void LongestkUnique(char a[], int k)
{
    int freq[26]={0};
    int len=-1;
    int cnt=0;
    int i=0;
    for(int j=0;a[j]!='\0';j++)
    {
        freq[a[j]-'a']++;
        if(freq[a[j]-'a']==1)
        {
            cnt++;
        }
        while(cnt>k)
        {
            // here we have more than k unique characters 
            // so, shrink the window
            freq[a[i]-'a']--;
            if(freq[a[i]-'a']==0)
            {
                cnt--;
            }
            i++;
        }
        if(cnt==k)
        {
            len=max(len,j-i+1);
        }
    }

cout<<"largest string length with "<<k<<" unique characters "<<len<<endl;
}


int main() {
  char a[100]="abbceddd";
  int k=3;
  LongestkUnique(a,k);
    
}
